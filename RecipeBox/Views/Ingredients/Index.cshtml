@{
    Layout = "_Layout";
}

<h1>Ingredients:</h1>
@if (Model.Count == 0)
{
    <h3>No ingredients have been added yet.</h3>
}
@foreach (Ingredient ingredient in Model)
{
    <h3><li>
        @Html.ActionLink($"{ingredient.IngredientDescription}", "Details", new {id = ingredient.IngredientId})
    </li></h3>
}

<h3>@Html.ActionLink("Add a new ingredient", "Create")</h3>
<h3>@Html.ActionLink("Home", "Index", "Home")</h3>