@{
    Layout = "_Layout";
}

<h1>Recipes:</h1>
@if (Model.Count == 0)
{
    <h3>No recipes have been added yet.</h3>
}
@foreach (Recipe recipe in Model)
{
    <h3><li>
        @Html.ActionLink($"{recipe.RecipeName}", "Details", new {id = Model.RecipeId})
    </li></h3>
}

<h3>@Html.ActionLink("Add a new recipe", "Create")</h3>
<h3>@Html.ActionLink("Home", "Index", "Home")</h3>